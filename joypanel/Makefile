## ----------------------------------------------------------------------------
## Configuration --------------------------------------------------------------

  BIN		=	joypanelp
  FLAG		=	-W -Wall -g -g3 -ggdb -Og -std=gnu11

  INCLUDE	=	-I./include/
  SRC		=	$(wildcard src/*.c)
  OBJ		=	$(SRC:.c=.o)

  ## Rules ------------------------------------------------------------------
  all:		bin
  bin:		$(OBJ)
		@bcc $(OBJ) -o $(BIN) $(LIBPATH)
		@echo "[OUT] " $(BIN)
		@echo $(BIN) | tr '[:lower:]' '[:upper:]'
  .c.o:
		@bcc $(INCLUDE) $(FLAG) -c $< -o $@
		@echo "[GCC]" $<
  clean:
		@rm -f $(OBJ)
  fclean:	clean
		@rm -f $(BIN)
  re:		fclean all

## ----------------------------------------------------------------------------
## MISC -----------------------------------------------------------------------

  .PHONY: all clean fclean re

  .SUFFIXES: .c .o
